CC =		@CC@
CFLAGS =	@CFLAGS@
AC_FLAGS =	@DEFS@
RANLIB =	@RANLIB@
ARCHIVE =	@AR@

INCS =		-I.

CC_SW =		 ${CFLAGS} ${AC_FLAGS} ${INCS}

OBJS =		file.o find.o macro.o word.o swap.o xalloc.o

all:		libutil.a

libutil.a:	$(OBJS)
		$(or $(ARCHIVE),ar) rv $@ $?
		$(or $(RANLIB),ranlib) $@

file.o:		file.c
		$(CC) -c $(CC_SW) -o $@ $?

find.o:		find.c
		$(CC) -c $(CC_SW) -o $@ $?

macro.o:	macro.c
		$(CC) -c $(CC_SW) -o $@ $?

swap.o:		swap.c
		$(CC) -c $(CC_SW) -o $@ $?

word.o:		word.c
		$(CC) -c $(CC_SW) -o $@ $?

xalloc.o:	xalloc.c
		$(CC) -c $(CC_SW) -o $@ $?

clean:		FORCE
		rm -rf *.o *.a *~ a.out*

FORCE:
